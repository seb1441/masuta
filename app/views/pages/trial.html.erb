<%= render(MainContentComponent.new) do %>
  <%= render(TitleComponent.new(text: "Free Trial Lesson")) %>
  <br>
  <div class="flex justify-center">
    <%= form_with(model: UserLesson.new, local: true, class: "w-full max-w-lg") do |form| %>
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
          <%= form.label :first_name, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <%= form.text_field :first_name, placeholder: "Jane", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
        </div>
        <div class="w-full md:w-1/2 px-3">
          <%= form.label :last_name, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <%= form.text_field :last_name, placeholder: "Doe", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
        </div>
      </div>
      <div class="flex flex-wrap -mx-3 mb-2">
        <div class="w-full px-3 mb-6 md:mb-0">
          <%= form.label :time_zone, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <%= form.time_zone_select(:timezone, nil, {default: "Eastern Time (US & Canada)"}, { class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"}) %>
        </div>
      </div>
      <br>
      <div class="flex flex-wrap -mx-3 mb-2">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
          <%= form.label :convenient_weekdays, "Convenient Weekdays (Mon-Sat)", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <%= form.text_field :convenient_weekdays, placeholder: "Ex. Mon, Tue, Sat..", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
        </div>
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
          <%= form.label :convenient_hours, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <%= form.text_field :convenient_hours, placeholder: "Ex. 1 to 3 PM", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
        </div>
      </div>
      <br>
      <div class="flex flex-wrap -mx-3 mb-2">
        <div class="w-full px-3 mb-6 md:mb-0">
          <%= form.label :skype_id, "Skype ID", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <%= form.text_field :skype_id, placeholder: "superman123", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
        </div>
      </div>
      <br>
      <div class="flex flex-wrap -mx-3 mb-2">
        <div class="w-full px-3 mb-6 md:mb-0">
          <%= form.label :level, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <div class="relative">
            <%= form.select :level, %w[Beginner Intermediate Advanced], {}, class: "block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
              <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
            </div>
          </div>
        </div>
      </div>
      <br>
      <div class="flex flex-wrap -mx-3 mb-2">
        <div class="w-full px-3 mb-6 md:mb-0">
          <%= form.label :comments, "Comments and/or questions", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <%= form.text_area :comments, class: "h-40 w-full border-double border-4 border-gray-600" %>
        </div>
      </div>
      <br>
      <div class="flex justify-center">
        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-state">
          We will contact you via email as soon as possible
        </label>
      </div>
      <div class="flex justify-center">
        <%= form.submit "Submit", class: "bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded" %>
      </div>
    <% end %>
  </div>
<%# </div> %>
<% end %>
<br>
<br>