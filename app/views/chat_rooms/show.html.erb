<%= turbo_frame_tag "chat_window" do %>
  <div id="chat-window" class="overflow-scroll mt-6 border-solid border-2 rounded-md" style="height: 500px;">
    <div id="chat_messages" class="mt-2 mb-4" data-controller="chat">
      <%= render @chat_room.chat_messages.order(:created_at) %>
    </div>

    <%= turbo_frame_tag "new_chat_message", src: new_chat_room_chat_message_path(@chat_room) %>
  </div>
<% end %>